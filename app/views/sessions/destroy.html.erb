<div class="block">
  <h2>Logout</h2>
  <% form_tag(logout_url, :method => :delete) do %>
    <div class="form-row">
      <span class="data">You are about to logout. Are you sure you want to continue?</span>
    </div>
    <div class="form-row">
      <span class="data"><%= submit_tag('Logout') %></span>
    </div>
  <% end %>
</div>
