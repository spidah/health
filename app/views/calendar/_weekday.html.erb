<div class="day<%= ' today' if date == today -%><%= extra if defined?(extra) -%>">
  <div class="data">
    <span class="number"><%= link_date(date, 'calendar', day) -%></span>
    <div>
      <%= link_weight(@weights, date) -%>
      <%= link_measurements(@measurements, date) -%>
      <%= link_meals(@meals, date) -%>
      <%= link_exercises(@exercises, date) -%>
    </div>
  </div>
</div>
