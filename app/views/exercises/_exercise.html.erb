    <tr class="exercise-item">
      <td><%= h(exercise.activity_name) %></td>
      <td><%= h(exercise.activity_type) %></td>
      <td class="duration"><%= pluralize(exercise.duration, 'minute') %></td>
      <td class="number calories"><%= exercise.calories %></td>
      <td class="edit"><%= link_to image_tag('/images/edit.gif'), edit_exercise_url(exercise) %></td>
      <td class="delete"><%= link_to image_tag('/images/delete.gif'), exercise_url(exercise),
        :confirm => 'Are you sure you want to delete this exercise?', :method => :delete %></td>
    </tr>
