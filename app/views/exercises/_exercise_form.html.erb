    <fieldset>
      <legend>Exercise Details</legend>
<%= print_flash(flash[:error], 'error', 'Error saving exercise') -%>
      <div class="form-row">
        <span class="label">Exercise</span>
        <span class="data"><%= select_tag('activity_activity', activities_to_options(@activities, f.object.new_record? ? -1 : f.object.activity_id), :name => 'exercise[activity]') %></span>
      </div>
      <div class="form-row">
        <span class="label">Duration</span>
        <span class="data"><%= f.text_field(:duration, :size => 6, :value => f.object.duration) %> minutes</span>
      </div>
      <div class="form-row">
        <%= submit_tag('Save', :class => 'submit') %>
        <%= cancel_button %>
      </div>
    </fieldset>
