    <fieldset>
      <legend>Exercise Details</legend>
      <%= print_flash(flash[:error], 'error', 'Error saving exercise') -%>
      <div class="form-row">
        <span class="label">Exercise</span>
        <span class="data"><%= select_tag('activity_activity', activities_to_options(activities, defined?(activity_id) ? activity_id : -1), :name => 'exercise[activity]') -%></span>
      </div>
      <div class="form-row">
        <span class="label">Duration</span>
        <span class="data"><%= f.text_field(:duration, :size => 6) -%> minutes</span>
      </div>
      <div class="form-row">
        <%= submit_tag(action, :class => 'submit') -%>
        <%= cancel_button if !defined?(no_cancel) -%>
      </div>
    </fieldset>
