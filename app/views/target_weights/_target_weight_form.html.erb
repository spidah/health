    <fieldset>
      <legend>Target Weight Data</legend>
<%= print_flash(flash[:error], 'error', 'Error saving target weight') -%>
      <div class="form-row">
        <span class="label">Weight</span>
        <span class="data"><%= weight_entry(@current_user.weight_units, @target_weight) %></span>
      </div>
      <div class="form-row">
        <%= submit_tag('Save', :class => 'submit') %>
        <%= cancel_button %>
      </div>
    </fieldset>
