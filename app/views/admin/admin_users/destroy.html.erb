<div class="block">
  <h2>Delete User</h2>
  <% form_tag(admin_user_url(@user), :method => :delete) do %>
    <div class="form-row">
      <span class="data">Are you sure you want to delete this user?</span>
    </div>
    <div class="form-row">
      <span class="data"><%= submit_tag('Delete') %></span>
      <span class="data"><%= cancel_button %></span>
    </div>
  <% end %>
</div>
