<tr>
  <td><%= user_item.id %></td>
  <td><%= h(user_item.loginname) %></td>
  <td><%= h(user_item.email) %></td>
  <td><%= user_item.admin ? 'Yes' : 'No' %></td>
  <td><%= user_item.gender == 'm' ? 'Male' : 'Female' %></td>
  <td><%= format_date(user_item.dob) %></td>
  <td><%= format_date(user_item.last_login) %></td>
  <td class="edit"><%= link_to(image_tag('/images/edit.gif'), edit_admin_user_url(user_item)) %></td>
  <td class="delete"><%= link_to(image_tag('/images/delete.gif'), admin_user_url(user_item),
    :confirm => 'Are you sure you want to delete this user?', :method => :delete) %></td>
</tr>
