<tr>
  <td class="admin-news-date"><%= format_date(item.posted_on) -%></td>
  <td class="admin-news-title"><%= h item.title -%></td>
  <td class="admin-news-body"><%= h item.body -%></td>
  <td class="edit"><%= link_to image_tag('/images/edit.gif'), edit_admin_news_path(item) -%></td>
  <td class="delete"><%= link_to image_tag('/images/delete.gif'), admin_news_path(item),
    :confirm => 'Are you sure you want to delete this news item?', :method => :delete -%></td>
</tr>