<div class="block">
  <h2>Delete News Item</h2>
  <% form_tag(admin_news_url(@item), :method => :delete) do %>
    <div class="form-row">
      <span class="data">Are you sure you want to delete this news item?</span>
    </div>
    <div class="form-row">
      <span class="data"><%= submit_tag('Delete') %></span>
      <span class="data"><%= cancel_button %></span>
    </div>
  <% end %>
</div>
