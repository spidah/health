      <% menu_side_bar do %>
          <h2>OpenID Login</h2>
          <% form_tag(session_url, :id => 'openid_login_form') do %>
            <div class="form-row">
              <span class="data"><input type="text" name="openid_url" class="openid_url text" size="18" value="http://"/></span>
            </div>
            <div class="form-row">
              <span class="openid">eg: http://yourname.myopenid.com</span>
            </div>
            <div class="form-row">
              <span class="data"><input type="submit" class="submit" name="login" value="Login" /></span>
            </div>
          <% end %>
      <% end %>
