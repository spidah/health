<div class="block">
  <h2>Edit Measurement For <%= h(@measurement.location) %> On <%= format_date(@measurement.taken_on) %></h2>
<%= print_flash(flash[:error], 'error', 'Error saving measurement') -%>
<%= print_flash(flash[:info], 'info') -%>
  <% form_for(:measurement, @measurement, :url => measurement_url(@measurement), :html => {:method => :put, :id => 'measurements_form'}) do |f| %>
<%= render(:partial => 'measurement_form', :locals => {:f => f}) %>
  <% end %>
</div>
