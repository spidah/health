<fieldset>
  <legend>Measurement Data</legend>
  <%= error if error %>
  <div class="form-row">
    <span class="label">Location</span>
    <span class="data"><%= f.text_field :location %></span>
  </div>
  <div class="form-row">
    <span class="label">Measurement</span>
    <span class="data"><%= measurement_entry(user.measurement_units, measurement) %></span>
  </div>
  <div class="form-row">
    <%= submit_tag action, :class => "submit" %>
  </div>
</fieldset>
