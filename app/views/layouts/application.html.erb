    <div id="content">
<%= yield %>
    </div>

    <div id="footer">
      <div>
        <span>&copy; Stickiweb Software <%= year_range(2007) %></span>
<%= render(:partial => 'shared/menu_footer') -%>
      </div>
    </div>
  </div>
</div>

<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.3.1/jquery.min.js" type="text/javascript"></script>
