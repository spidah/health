<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" lang="en" xml:lang="en">

<head>
  <%= stylesheet_link_tag('main') %>
  <%= stylesheet_link_tag('menus') %>
<% if @extra_stylesheets
   @extra_stylesheets.each { |file| -%>
  <%= stylesheet_link_tag(file) %>
<% }
   end
-%>
  <%= menu_extra(@activemenuitem) if @activemenuitem and !@activemenuitem.blank? -%>
  <title>Healtheriser</title>
</head>

<body>
<div id="page">
  <div id="header"></div>
  <%= render(:partial => 'shared/menu') %>

  <div id="main">
<%= render(:partial => 'shared/sidebar') %>

    <div id="content">
<%= yield %>
    </div>

    <div id="footer">
      <div>
      <span>&copy; Stickiweb Software <%= year_range(2007) %></span>
<%= render(:partial => 'shared/menu_footer') %>
      </div>
    </div>
  </div>
</div>

<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.3.1/jquery.min.js" type="text/javascript"></script>
<script src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.5.3/jquery-ui.min.js" type="text/javascript"></script>
<%= javascript_include_tag('application') %>
<%= javascript_include_tag('niftycube') %>
<% if @extra_javascripts
   @extra_javascripts.each { |file| -%>
<%= javascript_include_tag(file) %>
<% }
   end
-%>
<script type="text/javascript">
var AUTH_TOKEN = <%= form_authenticity_token.inspect %>;
window.onload = function() {
  Nifty("div.container", "tl tr transparent");
<%= yield(:niftycorners) -%>
}
<%= yield(:extrajavascript) -%>
</script>

</body>

</html>
