<div class="block">
  <h2>Delete Weight</h2>
  <% form_tag(weight_url(@weight), :method => :delete) do %>
    <div class="form-row">
      <span class="data">Are you sure you want to delete this weight?</span>
    </div>
    <div class="form-row">
      <span class="data"><%= submit_tag('Delete') %></span>
      <span class="data"><%= cancel_button %></span>
    </div>
  <% end %>
</div>
