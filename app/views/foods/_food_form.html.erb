    <fieldset>
      <legend>Food</legend>
      <%= print_flash(flash[:error], 'error', 'Error saving food') -%>
      <div class="form-row">
        <span class="label">Name</span>
        <span class="data"><%= f.text_field :name -%></span>
      </div>
      <div class="form-row">
        <span class="label">Description</span>
        <span class="data"><%= f.text_field :description -%></span>
      </div>
      <div class="form-row">
        <span class="label">Manufacturer</span>
        <span class="data"><%= f.text_field :manufacturer -%></span>
      </div>
      <div class="form-row">
        <span class="label">Weight</span>
        <span class="data"><%= f.text_field :weight -%></span>
      </div>
      <div class="form-row">
        <span class="label">Fat</span>
        <span class="data"><%= f.text_field :fat, :size => 6 -%> grams</span>
      </div>
      <div class="form-row">
        <span class="label">Protein</span>
        <span class="data"><%= f.text_field :protein, :size => 6 -%> grams</span>
      </div>
      <div class="form-row">
        <span class="label">Carbohydrates</span>
        <span class="data"><%= f.text_field :carbs, :size => 6 -%> grams</span>
      </div>
      <div class="form-row">
        <span class="label">Calories</span>
        <span class="data"><%= text_field :food, :calories, :size => 6 -%></span>
      </div>
      <div class="form-row">
        <%= submit_tag action, :class => 'submit' -%>
        <input name="cancel" type="button" value="Cancel" onclick="history.go(-1)" />
      </div>
    </fieldset>
